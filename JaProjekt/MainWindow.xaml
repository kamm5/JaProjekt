<Window x:Class="JaProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JaProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Name="ImageViewer" HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="225,24,0,0" Width="540" Height="360" Stretch="Uniform">
            <UIElement.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </UIElement.RenderTransform>
        </Image>
        <Button Content="Wybierz plik" Width="150" Height="50" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Click="PickFileButton_Click" Margin="48,62,0,0"/>
    </Grid>
</Window>
